{
  "name": "markduckjs",
  "version": "0.0.8",
  "description": "Render markdown with your Vue components.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "author": "Ryota Yamamoto <ryota.yama.9@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest ./src",
    "test:coverage": "npm test -- --coverage",
    "build": "npx rimraf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module es2015 --outDir dist/esm -d",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "prettier --vue-indent-script-and-style=false --check '**/*.{js,ts,vue,html,json,md,yml}'",
    "lintfix": "npm run lint -- --write",
    "typecheck": "tsc -p . --noEmit",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "files": [
    "dist"
  ],
  "typings": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymmooot/markduck.git"
  },
  "bugs": {
    "url": "https://github.com/ymmooot/markduck/issues"
  },
  "homepage": "https://github.com/ymmooot/markduck#readme",
  "keywords": [
    "vue",
    "markdown"
  ],
  "dependencies": {
    "@mapbox/hast-util-table-cell-style": "^0.1.3",
    "hast-to-hyperscript": "^9.0.1",
    "hast-util-sanitize": "^3.0.2",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^10.0.0",
    "unified": "^9.2.1",
    "unist-util-visit": "^2.0.3",
    "vue-demi": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@vue/compiler-sfc": "^3.2.21",
    "@vue/test-utils": "^2.0.0-rc.16",
    "babel-preset-env": "^1.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^26.6.3",
    "parcel-bundler": "1.12.3",
    "prettier": "^2.2.1",
    "shipjs": "0.23.0",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3",
    "vue": "^3.0.0"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
